@{
    ViewData["Title"] = "Listagem de Membros";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar novo membro</h1>
</div>

<form>
    <div class="form-group">
        <label for="nome">Nome do membro</label>
        <input type="text" class="form-control" placeholder="Digite o nome do membro">
    </div>

    <div class="form-group">
        <label for="cpf">CPF do membro</label>
        <input type="text" class="form-control" placeholder="Digite o CPF do membro">
    </div>

    <div class="form-group">
        <label for="rol">Número de rol</label>
        <input type="text" class="form-control" placeholder="Digite o número de rol do membro">
    </div>

    <div class="form-group">
        <label for="situacao">Situação do membro (Comunhão/Disciplina/Transferido/Excluído)</label>
        <input type="text" class="form-control" placeholder="Situação do membro">
    </div>
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>